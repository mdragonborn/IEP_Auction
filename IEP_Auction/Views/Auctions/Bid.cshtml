@model IEP_Auction.Models.CreateBidModel

@{
    ViewBag.Title = "Bid";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bid</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @if (ViewBag.ErrMsg != null)
        {
            <span color="red">@ViewBag.ErrMsg</span>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.TokenAmount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TokenAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TokenAmount, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="hidden" name="AuctionGuid" value="@ViewBag.AuctionGuid"/>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Bid" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
